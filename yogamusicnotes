            <ul class="list-disc list-inside text-sm text-stone-500 space-y-2 mb-6">
                <li>Select playlists curated from Spotify.</li>
                <li>Notes are saved automatically to your browser (Local Storage).</li>
                <li>Use the bottom toolbar to switch views.</li>
            </ul>
            <button onclick="document.getElementById('about-modal').classList.add('hidden')" class="w-full bg-emerald-100 text-emerald-700 font-bold py-2 rounded-lg hover:bg-emerald-200 transition">Got it, Namaste</button>
        </div>
    </div>

    <script>
        // --- State Management ---
        const STORAGE_KEY = 'yoga_app_notes';
        let notes = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];

        // --- DOM Elements ---
        const noteForm = document.getElementById('note-form');
        const notesList = document.getElementById('notes-list');
        const dateInput = document.getElementById('note-date');
        const spotifyFrame = document.getElementById('spotify-frame');
        const placeholderMsg = document.getElementById('placeholder-msg');

        // --- Initialization ---
        document.addEventListener('DOMContentLoaded', () => {
            renderNotes();
            // Set date picker to today
            dateInput.valueAsDate = new Date();
        });

        // --- View Switching Logic ---
        function switchView(viewName) {
            // Hide all views
            document.querySelectorAll('.view-section').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));

            // Show selected view
            document.getElementById(`view-${viewName}`).classList.add('active');
            document.getElementById(`nav-${viewName}`).classList.add('active');
            
            // Scroll to top for better UX on switch
            window.scrollTo(0, 0);
        }

        // --- Music Logic ---
        function loadPlaylist(playlistId) {
            const embedUrl = `https://open.spotify.com/embed/playlist/${playlistId}?utm_source=generator&theme=0`;
            spotifyFrame.src = embedUrl;
            spotifyFrame.classList.remove('hidden');
            placeholderMsg.classList.add('hidden');
        }

        // --- Note Logic ---
        noteForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const newNote = {
                id: Date.now(),
                date: document.getElementById('note-date').value,
                type: document.getElementById('note-type').value,
                content: document.getElementById('note-content').value,
                timestamp: new Date().getTime()
            };

            notes.unshift(newNote); // Add to top
            saveNotes();
            renderNotes();
            
            // Reset content but keep date/type for convenience
            document.getElementById('note-content').value = '';
            
            // Subtle visual feedback
            const btn = noteForm.querySelector('button');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fa-solid fa-check"></i> Saved';
            btn.classList.add('bg-emerald-800');
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.classList.remove('bg-emerald-800');
            }, 1000);
        });

        function deleteNote(id) {
            if(confirm('Delete this note?')) {
                notes = notes.filter(note => note.id !== id);
                saveNotes();
                renderNotes();
            }
        }

        function clearAllNotes() {
            if(notes.length === 0) return;
            if(confirm('Are you sure you want to delete all history?')) {
                notes = [];
                saveNotes();
                renderNotes();
            }
        }

        function saveNotes() {
            localStorage.setItem(STORAGE_KEY, JSON.stringify(notes));
        }

        function renderNotes() {
            if (notes.length === 0) {
                notesList.innerHTML = `
                    <div class="flex flex-col items-center justify-center h-full text-stone-300 space-y-2">
                        <i class="fa-solid fa-book-open text-3xl"></i>
                        <p>No notes recorded yet.</p>
                    </div>`;
                return;
            }

            notesList.innerHTML = notes.map(note => {
                // Format date nicely
                const dateObj = new Date(note.date);
                const dateStr = dateObj.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                return `
                <div class="bg-stone-50 p-4 rounded-xl border-l-4 border-emerald-400 relative group fade-in">
                    <div class="flex justify-between items-start mb-2">
                        <div>
                            <span class="text-xs font-bold text-emerald-600 uppercase tracking-wider">${note.type}</span>
                            <span class="text-xs text-stone-400 ml-2">${dateStr}</span>
                        </div>
                        <button onclick="deleteNote(${note.id})" class="text-stone-400 hover:text-red-500 opacity-0 group-hover:opacity-100 transition px-2">
                            <i class="fa-solid fa-trash-can"></i>
                        </button>
                    </div>
                    <p class="text-sm text-stone-700 whitespace-pre-wrap leading-relaxed">${escapeHtml(note.content)}</p>
                </div>
                `;
            }).join('');
        }

        // Utility to prevent XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
</body>
</html>

